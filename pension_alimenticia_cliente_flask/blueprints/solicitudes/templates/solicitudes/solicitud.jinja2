{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}

{% block title %}Ingresar datos personales{% endblock %}

{% block content %}
<div class="row justify-content-md-center m-5">
    <div class="col-12 col-md-10">
        <div class="card mb-5">
